{
    "comments": {
    "lineComment": "//",
    "blockComment": ["{", "}"],
    },
    "brackets": [
        [ "[", "]" ],
        [ "(", ")" ]
    ],
    "autoClosingPairs": [
        { "open": "[", "close": "]", "notIn": ["comment", "string"] },
        { "open": "(", "close": ")", "notIn": ["comment", "string"] },
        { "open": "'", "close": "'", "notIn": ["comment", "string"] }
    ],
    "autoCloseBefore": ";.= \n\t",
    "surroundingPairs": [
        [ "[", "]" ],
        [ "(", ")" ],
        [ "'", "'" ]
    ],
    "indentationRules": {
        "increaseIndentPattern": "(\\b(begin|match|case|then|else|do)\\b)|(=\\s+(class|record|interface|variant))",
        "decreaseIndentPattern": "end"
    }
  }